<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_landing">

    <fragment
        android:id="@+id/navigation_landing"
        android:name="com.institute.lostandfound.ui.LandingFragment"
        android:label="Landing"
        tools:layout="@layout/fragment_landing">
        
        <action
            android:id="@+id/action_landing_to_auth"
            app:destination="@id/navigation_auth" />
            
    </fragment>

    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.institute.lostandfound.ui.AuthFragment"
        android:label="Authentication"
        tools:layout="@layout/fragment_auth">
        
        <action
            android:id="@+id/action_auth_to_home"
            app:destination="@id/navigation_home" />
            
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.institute.lostandfound.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        
        <action
            android:id="@+id/action_home_to_item_detail"
            app:destination="@id/navigation_item_detail" />
        
        <action
            android:id="@+id/action_home_to_lost"
            app:destination="@id/navigation_lost" />
        
        <action
            android:id="@+id/action_home_to_found"
            app:destination="@id/navigation_found" />
        
        <action
            android:id="@+id/action_home_to_post"
            app:destination="@id/navigation_post" />
            
        <action
            android:id="@+id/action_home_to_auth"
            app:destination="@id/navigation_auth"
            app:popUpTo="@id/navigation_auth"
            app:popUpToInclusive="true" />
            
    </fragment>

    <fragment
        android:id="@+id/navigation_lost"
        android:name="com.institute.lostandfound.ui.LostItemsFragment"
        android:label="Lost Items"
        tools:layout="@layout/fragment_lost_items">
        
        <action
            android:id="@+id/action_lost_to_item_detail"
            app:destination="@id/navigation_item_detail" />
            
    </fragment>

    <fragment
        android:id="@+id/navigation_found"
        android:name="com.institute.lostandfound.ui.FoundItemsFragment"
        android:label="Found Items"
        tools:layout="@layout/fragment_found_items">
        
        <action
            android:id="@+id/action_found_to_item_detail"
            app:destination="@id/navigation_item_detail" />
            
    </fragment>

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.institute.lostandfound.ui.PostItemFragment"
        android:label="Post Item"
        tools:layout="@layout/fragment_post_item" />

    <fragment
        android:id="@+id/navigation_item_detail"
        android:name="com.institute.lostandfound.ui.ItemDetailFragment"
        android:label="Item Details"
        tools:layout="@layout/fragment_item_detail" />

</navigation> 